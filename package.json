{
  "name": "starcite-clients",
  "private": true,
  "version": "0.0.5",
  "description": "Starcite client monorepo",
  "packageManager": "bun@1.3.9",
  "scripts": {
    "clean": "bun run --workspaces --if-present clean",
    "build": "bun run --workspaces --if-present build",
    "smoke:live": "bun run scripts/live-smoke.ts",
    "test": "bun run --workspaces --if-present test",
    "lint": "bun run lint:root && bun run lint:workspaces",
    "format": "bun run format:root && bun run format:workspaces",
    "typecheck": "bun run --workspaces --if-present typecheck",
    "check": "bun run lint && bun run typecheck && bun run test",
    "version:sync": "node scripts/sync-versions.mjs",
    "version:patch": "node scripts/version.mjs patch",
    "version:minor": "node scripts/version.mjs minor",
    "version:major": "node scripts/version.mjs major",
    "version:set": "node scripts/version.mjs set",
    "release:verify-tag": "node scripts/verify-release-tag.mjs",
    "release:patch": "node scripts/release.mjs patch",
    "release:minor": "node scripts/release.mjs minor",
    "release:major": "node scripts/release.mjs major",
    "prepublishOnly": "bun run clean && bun run build && bun run check",
    "publish:dry": "bun run --workspaces --if-present publish:dry",
    "starcite": "bun run --cwd packages/starcite-cli dev",
    "starcite:compile": "bun run --cwd packages/starcite-cli compile",
    "lint:root": "ultracite check biome.jsonc package.json README.md scripts",
    "lint:workspaces": "bun run --workspaces --if-present lint",
    "format:root": "ultracite fix biome.jsonc package.json README.md scripts",
    "format:workspaces": "bun run --workspaces --if-present format"
  },
  "devDependencies": {
    "ultracite": "^7.1.5"
  },
  "workspaces": [
    "packages/typescript-sdk",
    "packages/starcite-cli",
    "packages/ai-sdk-transport",
    "examples/nextjs-chat-ui"
  ]
}
